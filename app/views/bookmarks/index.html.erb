<div>
  <div>
    <h1>
    <%=@current_user.first_name%>'s bookmarks
    </h1>
  </div>
</div>
<div>
  <div>

    <form action="/insert_bookmark" method="post">

    <label for="movie_dropdown">
          Movie
        </label>

      <div>
        <select id="movie_dropdown" name="query_movie">
        <%Movie.all.order(:title).each do |a_movie|%>

        <option value = "<%=a_movie.id%>"> <%=a_movie.title%> </option>

        <%end%>
        </select>
      
      <button>
        Bookmark this movie!
      </button>
      </div>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border = 1>
      <tr>

        <th>
          Movie
        </th>

        <th>
          Created at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_bookmarks.each do |a_bookmark| %>
      <tr>

        <td>
          <a href = "/movies/<%=a_bookmark.movie_id%>"><%= a_bookmark.movie.title %></a>
        </td>

        <td>
          <%= time_ago_in_words(a_bookmark.created_at) %> ago
        </td>

        <td>
          <a href="/delete_bookmark/<%= a_bookmark.id %>">
            Un-bookmark
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
