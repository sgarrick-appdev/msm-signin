<div>
  <div>
    <h1>
      List of all actors
    </h1>
  </div>
</div>

<div>
  <div>

    <form action="/insert_actor" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" placeholder = "Juan Perez">
      </div>

      <div>
        <label for="dob_box">
          Dob
        </label>

        <input type="text" id="dob_box" name="query_dob" placeholder = "2096-12-09">
      </div>

      <div>
        <label for="bio_box">
          Bio
        </label>

        <textarea type="text" id="bio_box" name="query_bio" row = "3" placeholder = "long bio..."></textarea>
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" placeholder = "Image URL">
      </div>

      <button>
        Add actor
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border = 1>
      <tr>
        <th>
          ID
        </th>
      <th>
          Image
        </th>

        <th>
          Name
        </th>

        <th>
          Dob
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_actors.each do |an_actor| %>
      <tr>
        <td>
          <%= an_actor.id %>
        </td>
      <td>
          <%= an_actor.image %>
        </td>
        <td>
          <%= an_actor.name %>
        </td>

        <td>
          <%= an_actor.dob %>
        </td>

        <td>
          <a href="/actors/<%= an_actor.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
