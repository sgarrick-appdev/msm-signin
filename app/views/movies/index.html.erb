<div>
  <div>
    <h1>
      List of all movies
    </h1>
  </div>
</div>

<div>
  <div>

    <form action="/insert_movie" method="post">

      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title" placeholder = "The Great Gatsby">
      </div>

      <div>
        <label for="year_box">
          Year
        </label>

        <input type="text" id="year_box" name="query_year" placeholder = "2096">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <textarea type="text" id="description_box" name="query_description"  placeholder = "long description..." rows="3"></textarea>
      </div>

      <div>
        <label for="duration_box">
          Duration
        </label>

        <input type="text" id="duration_box" name="query_duration" placeholder = "120">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" placeholder = "Image URL">
      </div>
    <div>
        <label for="director_id_box">
          Director
        </label>
  
        <select id="director_id_box" name="query_director_id">
          <%@list_of_directors.each do |a_director|%>
        <option value = "<%=a_director.id%>"><%=a_director.name%></option>
        <%end%>
        </select>
      </div>
      <button>
        Add movie
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border = 1>
      <tr>
        <th>
          ID
        </th>
      <th>
          Image
        </th>

        <th>
          Title
        </th>

        <th>
          Year
        </th>
        <th>
          Director
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_movies.each do |a_movie| %>
      <tr>
        <td>
          <%= a_movie.id %>
        </td>

        <td>
          <%= a_movie.image %>
        </td>

        <td>
          <%= a_movie.title %>
        </td>

        <td>
          <%= a_movie.year %>
        </td>
        <td>  
          <a href = "/directors/<%=a_movie.director_id%>"><%= a_movie.director.name %></a>
        </td>

        <td>
          <a href="/movies/<%= a_movie.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
